<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homefragment">

    <fragment
        android:id="@+id/homefragment"
        android:name="com.example.silvanadorantescode.news_android.home.presentation.HomeFragment"
        android:label="@string/home_fragment_label"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homefragment_to_newsdetailfragment"
            app:destination="@id/newsdetailfragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"/>

    </fragment>

    <fragment
        android:id="@+id/newsdetailfragment"
        android:name="com.example.silvanadorantescode.news_android.detailnews.presentation.NewsDetailFragment"
        android:label="@string/detail_fragment_label"
        tools:layout="@layout/fragment_detail_news">

        <argument
            android:name="newsItem"
            app:argType="com.example.silvanadorantescode.news_android.app.network.data.news.ArticlesListItem"
            app:nullable="true"/>

        <action
            android:id="@+id/action_newsdetailfragment_to_homefragment"
            app:popUpTo="@id/homefragment"
            app:enterAnim="@anim/enter_from_right"
            app:exitAnim="@anim/exit_to_right"/>

    </fragment>

</navigation>
